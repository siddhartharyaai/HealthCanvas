# ============================================
# HealthCanvas - Environment Configuration
# Copy this file to .env and customize
# ============================================

# Database
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://healthcanvas:${DB_PASSWORD}@localhost:5432/healthcanvas

# Authentication
JWT_SECRET=generate-a-long-random-string-here-at-least-32-chars
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_DAYS=30

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Frontend
VITE_API_URL=http://localhost:8000

# Optional: AWS S3 for document storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
S3_BUCKET_NAME=healthcanvas-documents

# Gemini AI (Required for OCR, explanations, insights)
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: OCR Service (not needed if using Gemini)
OCR_SERVICE_URL=

# Optional: pgAdmin
PGADMIN_PASSWORD=admin

# Production Settings
NODE_ENV=development
DEBUG=true
